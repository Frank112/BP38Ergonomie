<?xml version="1.0" encoding="UTF-8"?>
<!--
XML Format für Mitarbeiter.
Der "employees" Knoten signalisiert eine Liste von Mitarbeitern.
-->
<employees>
	<!--
	Der "employee" Knoten steht für ein konkreten Mitarbeiter,
	der mit den angegebenen Werten erstellt werden soll.
	Beachte: 	Die Reihenfolge der inneren Knoten ist hierbei irrelevant. Bei mehrfachen Auftreten 
					eines inneren Knoten wird nur das letzte Vorkommen beachtet.
					Es müssen theoretisch nicht alle Felder angegeben werden, auch
					ein leerer "employee" Knoten wird zu einem "leeren"
					Mitarbeiter (nicht empfohlen !).
	-->
	<employee>
		<!-- Die Personalnummer als Zeichenketter -->
		<staffNumber>123ABC567</staffNumber>
		<!-- Das Alter des Mitarbeiters -->
		<age>35</age>
		<!-- Geschlecht des Mitarbeiters: 0 männlich, 1 weiblich -->
		<gender>0</gender>
		<!-- Größe des Mitarbeiters in [cm] -->
		<height>182</height>
		<!-- Bemerkung zum Mitarbeiter -->
		<note>Hier koennte Ihre Werbung stehen!</note>
		<!-- 
		Körpervermessung des Mitarbeiters.
		Alle Werte sind Ganzzahlig und in [mm] anzugeben.
		Beachte: 	Die Reihenfolge der inneren Knoten ist hierbei irrelevant. Bei mehrfachen Auftreten 
						eines inneren Knoten wird nur das letzte Vorkommen beachtet.
						Es müssen theoretisch nicht alle Felder angegeben werden.
						Ein leerer "bodyMeasurement" Knoten wird zu einer Körpervermessung mit den
						Standardwerten die in der Datenbank angegeben sind.
		-->
		<bodyMeasurement>
			<headNeckHeight>150</headNeckHeight>
			<shoulderWidth>400</shoulderWidth>
			<shoulderWidthBiacromial>410</shoulderWidthBiacromial>
			<shoulderWidthBideltoid>420</shoulderWidthBideltoid>
			<upperArmLength>430</upperArmLength>
			<forearmLength>350</forearmLength>
			<handLengthGripAxis>50</handLengthGripAxis>
			<torsoHeight>460</torsoHeight>
			<thightHeight>370</thightHeight>
			<tibialHeight>230</tibialHeight>
			<footLength>450</footLength>
		</bodyMeasurement>
	</employee>
		<employee>
		<staffNumber>ABCDEFG</staffNumber>
		<age>28</age>
		<gender>1</gender>
		<height>150</height>
		<note>Diese Notiz sollte über mehrere Zeilen gehen. \n  Das macht das ganze Interessant. :)</note>
		<bodyMeasurement>
		</bodyMeasurement>
	</employee>
		<employee>
		<staffNumber>A1B2C3D4E5</staffNumber>
		<age>60</age>
		<gender>0</gender>
		<height>175</height>
		<note>Hier koennte Ihre Werbung stehen!</note>
	</employee>
		<employee>
		<staffNumber>123456789</staffNumber>
	</employee>
</employees>